@model  Email

<div class="card">
    <div class="card-body">
        <form asp-asp-controller="Email" asp-action="SendMail" type="Post">
            <div class="form-group">
                <label class="col-form-label"> To: </label>
                <input type="text" asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label class="col-form-label"> Subject :</label>
                <input type="text" asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label"> Message :</label>
                <textarea class="form-control" asp-for="Message"></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>